<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.paciente.ReservarDatetimeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="@string/elige_fecha" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.CLL.Button.TextButton"
        android:textSize="36sp"
        android:layout_marginBottom="16dp"
        android:text="dd/mm/aaaa"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="@string/elige_hora" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.CLL.Button.TextButton"
        android:textSize="36sp"
        android:layout_marginBottom="16dp"
        android:text="9:30 AM"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/iniciar_button"
        style="@style/Widget.CLL.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_continuar" />

</LinearLayout>